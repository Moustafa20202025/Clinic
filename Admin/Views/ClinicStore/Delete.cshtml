@model ClinicStore

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Confirm Deletion</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h1>Confirm Deletion</h1>
        <h3>Are you sure you want to delete this Clinic Store?</h3>
        <div>
            <h4>@Model.clinic.ClinicName </h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    InstrumentName
                </dt>
                <dd class="col-sm-10">
                    @Model.InstrumentName
                </dd>
                <dt class="col-sm-2">
                    DateAdded
                </dt>
                <dd class="col-sm-10">
                    @Model.DateAdded
                <dt class="col-sm-2">
                    ExpiryDate
                </dt>
                <dd class="col-sm-10">
                    @Model.ExpiryDate
                </dd>
                <dt class="col-sm-2">
                    ExpiryDate
                </dt>
                <dd class="col-sm-10">
                    @Model.ExpiryDate
                </dd>
               
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</body>
</html>
