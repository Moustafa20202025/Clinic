@model EmployeeSalaryCreation

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Create Salary Employee</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#clinicEmployeeSelect').select2();
        });
    </script>
</head>
<body>
    <div class="container mt-5">
        <h1>Create Salary Employee</h1>
        <form method="post" asp-controller="SalaryEmployee" asp-action="Create">
            
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">Create New Salary Employee</h2>
                    <hr />
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="EmployeeId" class="p-0">Clinic Employee</label>
                    <select id="clinicEmployeeSelect" asp-for="EmployeeId" class="form-control" asp-items="@(IEnumerable<SelectListItem>)ViewBag.EmployeeList"></select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="@Model.BaseSalary" class="p-0">Base Salary</label>
                    <input asp-for="@Model.BaseSalary" class="form-control" />
                    <span asp-validation-for="@Model.BaseSalary" class="text-danger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="@Model.Deductions" class="p-0">Deductions</label>
                    <input asp-for="@Model.Deductions" class="form-control" />
                    <span asp-validation-for="@Model.Deductions" class="text-danger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="@Model.Bonuses" class="p-0">Bonuses</label>
                    <input asp-for="@Model.Bonuses" class="form-control" />
                    <span asp-validation-for="@Model.Bonuses" class="text-danger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="@Model.PaymentDate" class="p-0">Payment Date</label>
                    <input asp-for="@Model.PaymentDate" class="form-control" />
                    <span asp-validation-for="@Model.PaymentDate" class="text-danger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="@Model.PaymentStatus" class="p-0">Payment Status</label>
                    <input asp-for="@Model.PaymentStatus" class="form-control" />
                    <span asp-validation-for="@Model.PaymentStatus" class="text-danger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="@Model.Remarks" class="p-0">Remarks</label>
                    <textarea asp-for="@Model.Remarks" class="form-control"></textarea>
                    <span asp-validation-for="@Model.Remarks" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="SalaryEmployee" asp-action="Index" class="btn btn-secondary border">
                            Back to List
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
