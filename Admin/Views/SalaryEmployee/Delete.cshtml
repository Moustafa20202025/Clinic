@model SalaryEmployee

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Confirm Deletion</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h1>Confirm Deletion</h1>
        <h3>Are you sure you want to delete this Patient from the Prescription List ?</h3>
        <div>
            <h4>@Model.clinicEmployee.FirstName @Model.clinicEmployee.LastName</h4>
            <hr />
            <dl class="row">

                <dt class="col-sm-2">
                    BaseSalary
                </dt>
                <dd class="col-sm-10">
                    @Model.BaseSalary 
                </dd>

                <dt class="col-sm-2">
                    NetSalary
                </dt>
                <dd class="col-sm-10">
                    @Model.NetSalary
                </dd>

                <dt class="col-sm-2">
                    Remarks
                </dt>
                <dd class="col-sm-10">
                    @Model.Remarks
                </dd> 
                



            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</body>
</html>